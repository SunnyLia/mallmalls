.abc {
  background-color: #0aa082;
  color: #fff;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  z-index: 1;
  margin-top:0.3rem;

}
.abc_gray {
  background-color: #bdbdbd !important;
}
.abc_a {
  left: -0.18rem;
  padding-top: 0.08rem;
  position: absolute;
  top: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  bottom: 0;
  z-index: 10;
}

.abc_b {
  padding-bottom: 0.6rem;
  padding-top: 0.5rem;
  border-right-width: 0.03rem;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  line-height: 1;
  border-right-style: dashed;
  border-right-color: #fff;
  position: relative;
  z-index: 1;
}

.b_top {
  margin-bottom: 0.2rem;
}

.b_top .b_t_l {
  font-size: 0.5rem;
}

.b_top b_t_r {
  font-size: 1.8rem;
}

.b_bot {
  font-size: 0.35rem;
}


.abc_c {
  padding-top: 0.3rem;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
  position: relative;
  z-index: 1;
  text-align: left;
}

.abc_d {

  right: -0.18rem;
  padding-top: 0.08rem;
  position: absolute;
  top: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  bottom: 0;
  z-index: 10;
}

.abc_a icon, .abc_d icon {
  width: 0.35rem;
  height: 0.35rem;
   margin-bottom: 0.08rem; 
   display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1; 
  border-radius: 50%;
  background-color: #fff;
}

.abc_b:before {
  width: 0.35rem;
  height: 0.35rem;
  right: -0.17rem;
  top: -0.17rem;
  content: "";
  display: block;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  z-index: 2;
}

.abc_b:after {
  bottom: -0.17rem;
  width: 0.35rem;
  height: 0.35rem;
  right: -0.17rem;
  content: "";
  display: block;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  z-index: 2;
}

.abc_e {
  position: absolute;
  z-index: 2;
  right: 0;
  top: 0;
  color: #fff;
  overflow: hidden;
  width: 3rem;
  height: 3rem;
}

.abc_e text {
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  display: inline-block;
  width: 3rem;
  background-color: #9a9a9a;
  z-index: 1;
  position: relative;
  top: -0.3rem;
  height: 0.8rem;
  line-height: 0.8rem;
  font-size:0.3rem;
  right:-0.6rem;

}



