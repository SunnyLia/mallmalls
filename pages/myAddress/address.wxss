.myAddress .address {
    padding: 0.5rem;
}

.myAddress .address .click {
    display: inline-block;
    width: 100%;
    height: 4rem;
    border: 1px solid #e4e4e4;
    text-align: center;
    padding: 0.5rem 0;
}


.myAddress .address .click text {
    font-size: 0.5rem;
    color: #f17164;
}

.myAddress .address .click .add {
    font-size: 1.5rem;
    color: #e4e4e4;
}


.addressList .listLi {
    width: 100%;
    height: auto;
    border: 1px solid #e4e4e4;
    margin-bottom: 0.5rem;
    padding: 0 0.7rem;
    font-size: 0.5rem;
}

.addressList .listLi .listTop {
    height: 1.5rem;
    line-height: 1.5rem;
    border-bottom: 1px solid #e4e4e4;
}

.addressList .listLi .listBot {
    padding: 0.5rem 0 0.4rem;
}

.addressList .listLi .listBot .addres {
    line-height: 0.7rem;
}

.addressList .listLi .listBot .buttons {
    line-height: 0.8rem;
    height: 0.8rem;
    margin-top: 0.2rem;
}

.addressList .listLi .listBot .buttons text {
    color: #f17164;
    padding: 0.2rem 0;
    margin-right: 0.6rem;
}

.addressList .listLi .listBot .buttons .defaultAdd {
    margin-right: 0;
}

.default {
    margin-right: 0 !important;
    color: #fff !important;
    background-color: #f17164;
    text-align: center;
    width: 1.8rem;
    display: inline-block;
    height: 0.9rem;
    line-height: 0.9rem;
    padding: 0.08rem 0 !important;
}