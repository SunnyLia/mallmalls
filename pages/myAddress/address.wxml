<view class="myAddress">
    <view class="addressList">
        <view wx:for="addressLists" class="listLi">
            <view class="listTop clearfix">
                <view class="fl">
                    收货人：{{item.user_name}}
                </view>
                <view class="fr">{{item.phone}}</view>
            </view>
            <view class="listBot">
                <view class="addres">{{item.province_name}} {{item.city_name}} {{item.district_name}}</view>
                <view class="buttons clearfix">
                    <view class="fl">
                        <text class="modifyAdd">修改地址</text>
                        <text class="deleteAdd">删除</text>
                    </view>
                    <view class="fr">
                        <text class="default" wx:if="{{item.is_default}}">默认</text>
                        <text class="defaultAdd" wx:else>设为默认</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="address">
      <view bindtap="showMask" class="click">
        <text class="add">+</text>
        <text>新建地址</text>
      </view>
    </view>
    <view class="addressMask">
        <view class="mask">
            <view class="title">
                <text class="fl">新建地址</text>
                <text class="fr" bindtap="showMask">x</text>
            </view>
            <form class="addForm">
                <view class="items required">
                    <input type="text" placeholder="收货人姓名" class="linage" name="user_name">
                </view>
                <view class="items required">
                    <input type="number" placeholder="收货人电话号码" class="linage" name="phone">
                </view>
                <view class="items noborder flex required">
                    <!-- 选择省 -->
                    <view class="shengsx">
                        <select class="select1" name="province_id">
                            <option value="">选择省</option>
                            <option  data-code="11" value="1">广东省</option>
                        </select>
                        <icon class="selIcon"></i>
                    </view>
                    <!-- 选择市 -->
                    <view class="shengsx">
                        <select class="select1 pending" name="city_id">
                            <option>选择市</option>
                            <option  data-code="11" value="1">深圳市</option>
                        </select>
                        <icon class="selIcon"></i>
                    </view>
                    <!-- 选择县 -->
                    <view class="shengsx">
                        <select class="select1 pending" name="district_id">
                            <option>选择区</option>
                            <option  data-code="11" value="1">南山区</option>
                        </select>
                        <icon class="selIcon"></i>
                    </view>
                </view>
                <view class="items required">
                    <textarea placeholder="请输入详细地址，例街道号码，楼门号" class="linage" name="detail"></textarea>
                </view>
                <view class="save">
                    <a class="save-btn default">保存</a>
                </view>
            </form>
        </view>
    </view>
</view>